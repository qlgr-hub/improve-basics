
CC := /usr/bin/gcc
CFLAG := -Wall

SRCS := ./get_ifi_info.c ./prifinfo.c
OBJS := ./get_ifi_info.o ./prifinfo.o

OUTPUT_D := ../output/debug/prifinfo
OUTPUT_R := ../output/release/prifinfo

LIB_D := ../lib/debug/
LIB_R := ../lib/release/

all: debug release

debug:
	rm -rf $(OUTPUT_D)
	$(CC) -c -g $(CFLAG) $(SRCS)
	$(CC) $(OBJS) -L$(LIB_D) -lunpcom -o $(OUTPUT_D) -lsctp

release:
	rm -rf $(OUTPUT_R)
	$(CC) -c -O2 $(CFLAG) $(SRCS)
	$(CC) $(OBJS) -L$(LIB_R) -lunpcom -o $(OUTPUT_R) -lsctp

.PHONY: all clean

clean:
	rm -rf $(OUTPUT_D)
	rm -rf $(OUTPUT_R)